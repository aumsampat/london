import { useState, useEffect } from "react";
import { CalendarDoor } from "@/components/CalendarDoor";
import { StoryModal } from "@/components/StoryModal";
import { INITIAL_STORIES, Story, normalizeSecret, STORAGE_KEY } from "@/data/stories";
import { useToast } from "@/hooks/use-toast";
import { Heart, Snowflake } from "lucide-react";

const Index = () => {
  const [stories, setStories] = useState<Story[]>(() => {
    // Load saved progress from localStorage
    const saved = localStorage.getItem(STORAGE_KEY);
    if (saved) {
      try {
        const savedStories = JSON.parse(saved);
        return savedStories;
      } catch (e) {
        return INITIAL_STORIES;
      }
    }
    return INITIAL_STORIES;
  });

  const [selectedStory, setSelectedStory] = useState<Story | null>(null);
  const [isModalOpen, setIsModalOpen] = useState(false);
  const { toast } = useToast();

  // Save to localStorage whenever stories change
  useEffect(() => {
    localStorage.setItem(STORAGE_KEY, JSON.stringify(stories));
  }, [stories]);

  const handleDoorClick = (day: number) => {
    const story = stories.find(s => s.day === day);
    if (!story) return;

    if (!story.unlocked) {
      // Show locked message with hint
      setSelectedStory(story);
      setIsModalOpen(true);
      toast({
        title: "This chapter is locked! ðŸ”’",
        description: `Complete Day ${day - 1} and find the secret to unlock this story.`,
        variant: "destructive",
      });
      return;
    }

    // Mark as viewed if it was just unlocked
    if (story.unlocked) {
      const updatedStories = stories.map(s => 
        s.day === day ? { ...s } : s
      );
      setStories(updatedStories);
    }

    setSelectedStory(story);
    setIsModalOpen(true);
  };

  const handleUnlockAttempt = (inputSecret: string) => {
    const currentStory = selectedStory;
    if (!currentStory) return;

    const nextDay = currentStory.day + 1;
    const nextStory = stories.find(s => s.day === nextDay);
    
    if (!nextStory) {
      toast({
        title: "You've reached the end! ðŸŽ‰",
        description: "Congratulations on completing all 32 days of love stories!",
      });
      return;
    }

    const normalizedInput = normalizeSecret(inputSecret);
    const normalizedSecret = normalizeSecret(nextStory.secret);

    if (normalizedInput === normalizedSecret) {
      // Unlock the next story
      const updatedStories = stories.map(s => 
        s.day === nextDay ? { ...s, unlocked: true } : s
      );
      setStories(updatedStories);
      
      toast({
        title: "Success! âœ¨",
        description: `Day ${nextDay} has been unlocked! Click to read the next chapter.`,
      });
    } else {
      toast({
        title: "Not quite right... ðŸ¤”",
        description: nextStory.hint || "Try again! The secret is hidden in the story.",
        variant: "destructive",
      });
    }
  };

  const getDoorState = (story: Story): "locked" | "unlocked" | "viewed" => {
    if (!story.unlocked) return "locked";
    return "unlocked";
  };

  return (
    <div className="min-h-screen bg-background relative overflow-hidden">
      {/* Decorative background elements */}
      <div className="absolute inset-0 opacity-5">
        <div className="absolute top-10 left-10 text-pine">
          <Snowflake className="w-32 h-32 animate-spin" style={{ animationDuration: '20s' }} />
        </div>
        <div className="absolute bottom-20 right-20 text-pine">
          <Snowflake className="w-24 h-24 animate-spin" style={{ animationDuration: '15s' }} />
        </div>
        <div className="absolute top-1/2 left-1/3 text-pine">
          <Heart className="w-16 h-16 animate-pulse" />
        </div>
      </div>

      <main className="relative z-10 container max-w-7xl mx-auto px-4 py-8 md:py-12">
        {/* Header */}
        <header className="text-center mb-12 space-y-4">
          <h1 className="text-4xl md:text-6xl lg:text-7xl font-sans font-bold text-pine leading-tight">
            Advent Calendar for<br />
            <span className="text-ruby">My Christmas Cake</span>
          </h1>
          <p className="text-lg md:text-xl text-muted-foreground font-serif italic">
            32 Days of Interconnected London Love Stories
          </p>
          <div className="flex items-center justify-center gap-2 text-pine">
            <Heart className="w-5 h-5 fill-ruby text-ruby" />
            <Heart className="w-5 h-5 fill-ruby text-ruby" />
            <Heart className="w-5 h-5 fill-ruby text-ruby" />
          </div>
        </header>

        {/* Progress indicator */}
        <div className="mb-8 text-center">
          <div className="inline-block bg-card rounded-full px-6 py-3 shadow-soft border border-pine/10">
            <p className="text-sm font-sans font-semibold text-pine">
              ðŸ“– Stories Unlocked: <span className="text-ruby">{stories.filter(s => s.unlocked).length}</span> / 32
            </p>
          </div>
        </div>

        {/* Calendar Grid */}
        <div className="grid grid-cols-4 md:grid-cols-6 lg:grid-cols-8 gap-3 md:gap-4 mb-12">
          {stories.map((story) => (
            <CalendarDoor
              key={story.day}
              day={story.day}
              state={getDoorState(story)}
              onClick={() => handleDoorClick(story.day)}
            />
          ))}
        </div>

        {/* Instructions */}
        <div className="max-w-2xl mx-auto bg-card rounded-2xl p-6 md:p-8 shadow-elevated border border-pine/10">
          <h2 className="text-2xl font-sans font-bold text-pine mb-4 flex items-center gap-2">
            <span>âœ¨</span> How to Play
          </h2>
          <ol className="space-y-3 text-pine font-serif">
            <li className="flex gap-3">
              <span className="font-bold text-ruby font-sans">1.</span>
              <span>Click on an unlocked door (golden) to read that day's story</span>
            </li>
            <li className="flex gap-3">
              <span className="font-bold text-ruby font-sans">2.</span>
              <span>Find the <strong>secret connection</strong> hidden in each story</span>
            </li>
            <li className="flex gap-3">
              <span className="font-bold text-ruby font-sans">3.</span>
              <span>Enter the secret at the bottom of the story to unlock the next day</span>
            </li>
        </div>
      </main>

      {/* Story Modal */}
      <StoryModal
        story={selectedStory}
        isOpen={isModalOpen}
        onClose={() => setIsModalOpen(false)}
        onUnlockAttempt={handleUnlockAttempt}
        nextDayNumber={selectedStory ? selectedStory.day + 1 : undefined}
      />
    </div>
  );
};

export default Index;
